<div class="message-cell {{isMine}} file" id="{{id}}" userid="{{userID}}">
    
    <div class="status status{{status}}">
        
        <span class="sending glyphicon glyphicon-arrow-right"></span>
        <span class="sent glyphicon glyphicon-ok-circle  "></span>
      
    </div>
        
	<div class="avatar">
		<img src="{{ avatarURL }}" />
    </div>

    <div class="info">
        
        <span class="name"> {{name}} </span>
        <span class="time"> {{formatTime created}} </span>        
        
    </div>
    
    <div class="file-container">
        
        <div>
            <div class="icon col-md-2">
                <span class="icon glyphicon glyphicon-file"></span>
            </div>
            <div class="file-info col-md-10">
                <span class="file-name">{{{ file.file.name }}}</span><br />
                <span class="file-size">{{{ file.file.size }}} MB</span><br />
                <a class="download" downloadlink="{{downloadURL}}" id="{{id}}">Download</a>
            </div>
            
        </div>
        
        <div class="clearfix"></div>

    </div>
    
    <div class="clearfix"></div>
    
</div>

